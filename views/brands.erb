<center><h2><%= @brand.name %></h2>
<p><a href="/">Home</a></p></center>

<div class="row">
  <div class="col-md-6">
    <form class="" action="/brands/<%= @brand.id %>/edit" method="post">
      <input type="hidden" name="_method" value="patch">
      <div class="form-group"><br>
        <label for="name">Brand Name</label>
        <input id="name" type="text" name="name" >
      </div>
      <div class="row">
        <div class="col-md-3">
            <button type="submit" name="button" class="btn">Update Brand</button>
          </form>
        </div>
        <div class="col-md-3">
          <form class="form-group" action="/brands/<%= @brand.id %>/delete" method="post">
            <input type="hidden" name="_method" value="delete" class="form-control">
            <button type="submit" name="button" class="btn" id="delete">Delete Brand</button>
        </div>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h4>Average Price: $<%= @brand.price %>.00</h4>
    <form class="" action="/brands/<%= @brand.id %>/price/edit" method="post">
      <input type="hidden" name="_method" value="patch">
      <div class="form-group">
        <label for="price">Brand Price</label>
        <input id="price" type="text" name="price">
      </div>
        <button type="submit" name="button" class="btn">Update Price</button>
      </form>
    </div>
  </div>
</div>
